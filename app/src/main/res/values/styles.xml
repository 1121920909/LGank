<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 为滑动关闭Activity添加的属性 -->
        <item name="android:windowIsTranslucent">false</item>//就是关掉这个Activity的透明背景
    </style>

<!--    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>-->


    <style name="PicTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="BaseTheme" parent="AppTheme">
        <!-- 为滑动关闭Activity添加的属性 -->
        //背景透明，不设滑动关闭时背景就是黑的。
        <item name="android:windowIsTranslucent">true</item>
        //Activity右滑进出的动画，觉得这个不好看随便换成自己的
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
    </style>

    <style name="theme_cardview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="theme_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/skin_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
